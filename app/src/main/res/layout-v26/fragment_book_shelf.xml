<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewModule.BookShelfFragment"
    android:background="@color/white_f6">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:paddingTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:id="@+id/tv_bookshelf"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_35"
                android:text="@string/bookshelf"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_30"
                android:layout_marginStart="@dimen/dp_20" />
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white_100"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_60"
                android:src="@mipmap/search"
                android:contentDescription="@string/search" />
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/more_24px"
                android:layout_marginEnd="@dimen/dp_15"
                android:scaleType="fitCenter"
                android:contentDescription="@string/menu"
                android:background="@color/white_100"
                android:id="@+id/iv_more"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/white_150"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/dp_220"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_15">
                <ImageView
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/shape_cor"
                    android:contentDescription="@string/bgr_time" />
                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:src="@mipmap/clock_16px"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/clock"
                    android:contentDescription="@string/time" />
                <View
                    android:id="@+id/blank1"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@+id/clock"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_toEndOf="@+id/blank1"
                    android:text="@string/read"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_toEndOf="@+id/text1"
                    android:text="@string/unwritten"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_32"
                    android:layout_toEndOf="@id/zero"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@string/min"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/edit"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rl_editBook">
        <TextView
            android:id="@+id/tv_chooseAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/chooseAllBook"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_allBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allBooks"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_28"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_checkNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_38"
            android:text="@string/hasChoose"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/black_500"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"/>
        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="@string/complete"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_noBook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_135"
            android:contentDescription="@string/no_book"
            android:src="@mipmap/file_100px"
            android:layout_centerInParent="true"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/no_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_451"
            android:text="@string/add_book"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/sp_20"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bookList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_140"
        android:padding="@dimen/dp_5"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="@dimen/dp_120"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_15"
        android:paddingHorizontal="@dimen/dp_15"
        android:id="@+id/ll_menu"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_224"
        android:layout_marginTop="@dimen/dp_55"
        android:background="@drawable/dialog_background"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_manageBook"
            android:text="@string/edit_book"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tv_get"
            android:text="@string/get_book"
            android:textSize="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_update"
            android:text="@string/update_remind"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</FrameLayout>