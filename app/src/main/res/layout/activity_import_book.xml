<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_15"
    tools:context=".SettingModule.acquire_help.ImportBookActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:contentDescription="@string/back"
        android:src="@mipmap/back_24px" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:text="如何导入本地书籍"
        android:textSize="@dimen/sp_18"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_dc"
        android:layout_marginTop="@dimen/dp_15"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/import_book_question"
                android:textSize="@dimen/sp_16"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/import_book1"
                android:scaleType="fitCenter"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_resolver"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_200"
                app:cornerRadius="@dimen/dp_50"
                android:backgroundTint="@color/font2"
                android:layout_marginTop="@dimen/dp_30"
                android:text="已解决"
                android:textColor="@color/black"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_master"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_dc"
                app:cornerRadius="@dimen/dp_50"
                android:layout_marginTop="-50dp"
                android:text="未解决"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>