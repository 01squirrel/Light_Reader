<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewModule.BookCityFragment"
    android:background="@color/white_f6"
    android:id="@+id/bookCity"
    android:tag="@string/book_city">

   <ImageView
       android:contentDescription="@string/search"
       android:layout_width="@dimen/dp_30"
       android:layout_height="@dimen/dp_40"
       android:src="@mipmap/search"
       android:layout_marginTop="@dimen/dp_15"
       android:layout_marginStart="@dimen/dp_15"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_60"
            android:layout_marginEnd="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white_150"
            android:hint="@string/input"
            android:textColorHint="@color/black_500"/>
    <ImageButton
        android:id="@+id/qr_code"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_310"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@color/white_50"
        android:src="@drawable/qr_code"
        android:scaleType="fitCenter"
        android:contentDescription="@string/qr" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:orientation="horizontal"
        android:baselineAligned="true">
        <RelativeLayout
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1">
            <CheckedTextView
                android:id="@+id/jingxuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:text="@string/selection"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/black"/>
           <View
               android:id="@+id/line_1"
               android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_2"
               android:layout_alignBottom="@+id/jingxuan"
               android:background="@color/blue_500"
               android:layout_marginStart="@dimen/dp_5"/>
        </RelativeLayout>
            <RelativeLayout
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1">
            <CheckedTextView
                android:id="@+id/boy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:text="@string/boy"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/black"/>
           <View
               android:id="@+id/line_2"
               android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_2"
               android:layout_alignBottom="@+id/boy"
               android:background="@color/blue_500"
               android:layout_marginStart="@dimen/dp_5"
               android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1">
            <CheckedTextView
                android:id="@+id/girl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:text="@string/lady"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/line_3"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_2"
                android:layout_alignBottom="@+id/girl"
                android:background="@color/blue_500"
                android:layout_marginStart="@dimen/dp_5"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_weight="1">
            <CheckedTextView
                android:id="@+id/listen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:text="@string/listen"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/line_4"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_2"
                android:layout_alignBottom="@+id/listen"
                android:background="@color/blue_500"
                android:layout_marginStart="@dimen/dp_5"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_5">
            <CheckedTextView
                android:id="@+id/publish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:text="@string/publish"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/line_5"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_2"
                android:layout_alignBottom="@+id/publish"
                android:background="@color/blue_500"
                android:layout_marginStart="@dimen/dp_5"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>