<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingModule.NoticeMessageActivity"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:gravity="start">
    <ImageView
        android:id="@+id/iv_backToRead"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/back_24px"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:contentDescription="@string/back" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_message"
        android:textStyle="bold"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_25"/>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_noMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:contentDescription="@string/no_msg"
            android:src="@mipmap/new_letter_100px"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/no_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_370"
            android:text="@string/no_message"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/sp_20"/>
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_notice"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        app:tabTextAppearance="@style/tabLayout"
        app:tabBackground="@color/white"
        app:tabGravity="center"
        app:tabPaddingEnd="@dimen/dp_10"
        app:tabPaddingStart="@dimen/dp_10"
        app:tabSelectedTextColor="@color/green_4"
        app:tabIndicatorFullWidth="false"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/green_5"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="visible"/>
</LinearLayout>