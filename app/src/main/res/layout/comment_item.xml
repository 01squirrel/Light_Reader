<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/dp_15"
    android:layout_marginVertical="@dimen/dp_10"
    android:background="@color/white">
<com.makeramen.roundedimageview.RoundedImageView
    android:layout_width="@dimen/dp_50"
    android:layout_height="@dimen/dp_50"
    android:src="@mipmap/head"
    android:id="@+id/iv_head2"
    app:riv_border_width="@dimen/dp_1"
    app:riv_border_color="@color/grey_dc"
    app:riv_corner_radius="@dimen/dp_50"/>
<TextView
    android:id="@+id/tv_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/user_name"
    android:textSize="@dimen/sp_16"
    android:textColor="@color/black"
    android:layout_toEndOf="@+id/iv_head2"
    android:layout_marginStart="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_time"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/grey_b1"
        android:layout_toEndOf="@+id/iv_head2"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_10"/>
    <TextView
        android:id="@id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_toEndOf="@+id/iv_head2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="11111111"
        android:textSize="@dimen/sp_18"
        android:lineSpacingExtra="@dimen/dp_5"/>
    <ImageView
        android:id="@+id/iv_praise"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/favorite_50px"
        android:layout_below="@+id/tv_content"
        android:layout_toEndOf="@+id/iv_head2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_8"
        android:contentDescription="@string/Praise_number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_praise"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:text="0"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black_8c"
        android:id="@+id/tv_praiseNumber"/>
</RelativeLayout>