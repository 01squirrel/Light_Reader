<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewModule.FileManageFragment"
    android:background="@color/white_f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_import"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/import_book"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_25" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_search"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toEndOf="@+id/tv_import"
            android:hint="@string/input"
            android:textColorHint="@color/grey_400"
            android:background="@drawable/edittext_border"
            android:singleLine="true"
            android:inputType="textCapWords"
            android:textSize="@dimen/sp_16"
            android:textScaleX="1"/>
        <ImageView
            android:id="@+id/file_search"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white_100"
            android:layout_toEndOf="@+id/edit_search"
            android:src="@mipmap/search"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_10"
            android:contentDescription="@string/search" />
        <ImageButton
            android:id="@+id/ib_sort"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/conversion_32px"
            android:scaleType="fitXY"
            android:background="@color/white_100"
            android:contentDescription="@string/more_point" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_65"
        android:background="@color/white_150"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_75"
        android:visibility="visible"
        android:spinnerMode="dropdown"
        android:scrollbars="vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_110">
        <ListView
            android:id="@+id/lv_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:overScrollMode="never"
            android:choiceMode="multipleChoice"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:layout_marginTop="@dimen/dp_451"
    android:layout_marginHorizontal="@dimen/dp_15"
    android:background="@drawable/rounded_rectangle"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <LinearLayout
        android:id="@+id/checkNum"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/choose_all"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:contentDescription="@string/check" />
        <TextView
            android:id="@+id/tv_selected"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="@string/check_all"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/scanFile"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_scanFile"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/scan_file"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="@string/check" />
            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_30"
                android:text="@string/scan_file"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/addBook"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_addShelf"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/add_book"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:contentDescription="@string/check" />
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:text="@string/addToBookshelf"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_65"
        android:background="@drawable/select_back"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/all_type"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
            <ImageView
                android:id="@+id/iv_allType"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_230"
                android:src="@mipmap/done"
                android:contentDescription="@string/select" />
        </LinearLayout>
        <View
            android:id="@+id/line_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/white_150"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/ll_one"/>
        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_01">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/txt"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
            <ImageView
                android:id="@+id/iv_txt"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_280"
                android:src="@mipmap/done"
                android:visibility="invisible"
                android:contentDescription="@string/select" />
        </LinearLayout>
        <View
            android:id="@+id/line_02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/white_150"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/ll_two"/>
        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_02">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/other"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"/>
            <ImageView
                android:id="@+id/iv_other"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_265"
                android:src="@mipmap/done"
                android:visibility="invisible"
                android:contentDescription="@string/select" />
        </LinearLayout>
        <View
            android:id="@+id/line_03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/white_150"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/ll_three"/>
        <LinearLayout
            android:id="@+id/ll_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_03">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/file_manage"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>
        <View
            android:id="@+id/line_04"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/white_150"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/ll_four"/>
    </RelativeLayout>
</FrameLayout>