<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainViewModule.UserFragment"
    android:background="@color/white_f6">
<ImageView
    android:id="@+id/iv_message"
    android:layout_width="@dimen/dp_30"
    android:layout_height="@dimen/dp_30"
    android:contentDescription="@string/msg"
    android:src="@mipmap/sms_50px"
    android:layout_marginStart="@dimen/dp_310"
    android:layout_marginTop="@dimen/dp_20"/>
    <ImageView
        android:id="@+id/iv_tip"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:visibility="visible"
        android:src="@mipmap/point"
        android:layout_marginStart="@dimen/dp_330"
        android:layout_marginTop="@dimen/dp_15"
        android:contentDescription="@string/message_tip"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_70">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15">
        <RelativeLayout
            android:id="@+id/rl_personInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:background="@drawable/rounded_rectangle">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ib_head"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@mipmap/head"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_cor"
                android:contentDescription="@string/headportrait" />
            <TextView
                android:id="@+id/tv_nickName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textFontWeight="@android:integer/config_mediumAnimTime"
                android:text="@string/login_register"
                android:layout_toEndOf="@+id/ib_head"
                android:layout_marginStart="@dimen/dp_10" />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:src="@mipmap/circled_right"
                android:layout_toEndOf="@+id/tv_nickName"
                android:layout_marginStart="@dimen/dp_10"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="@string/hasRead"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_below="@+id/tv_nickName"
                android:layout_toEndOf="@+id/ib_head"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_readingTime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="@string/init_num"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_below="@+id/tv_nickName"
                android:layout_toEndOf="@+id/tv_1"
                android:layout_marginTop="@dimen/dp_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="@string/hour"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:layout_below="@+id/tv_nickName"
                android:layout_toEndOf="@+id/tv_readingTime"
                android:layout_marginTop="@dimen/dp_10" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usually_function"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_30"/>
        <RelativeLayout
            android:id="@+id/rl_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/course_30px"
                android:contentDescription="@string/myBooks" />
            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:text="@string/myBooks"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textStyle="normal"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/forward_50px"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/myBooks" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_interaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/collaboration_40px"
                android:contentDescription="@string/myBooks" />
            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:text="@string/interaction"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textStyle="normal"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/forward_50px"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/myBooks" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/settings_64px"
                android:contentDescription="@string/myBooks" />
            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:text="@string/setting"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textStyle="normal"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/forward_50px"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/myBooks" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/comments_32px"
                android:contentDescription="@string/myBooks" />
            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:text="@string/feedback"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:textStyle="normal"/>
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/forward_50px"
                android:contentDescription="@string/myBooks" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</FrameLayout>